            <form action="" >
                <input type="number" name="bid" value="1001">
                <input type="submit" name="" id="" value="raise bid">
            </form>
        </div>
    </div>
    <div class="users-details inner_container">
        <h3>currently</h3>
        <div class="log-container">

        </div>
    </div>  
</div>
</section>

