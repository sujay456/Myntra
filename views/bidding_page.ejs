<section class="bidding">
    
<div class="bidding_container" >
    <div class="Product-details inner_container">
        <h3>
            <%=bp.product.name%>
    
        </h3>
        
        <img src="images/<%=bp.product.image%>" alt="product image" width="200px" >
    
        
    </div>
